<h1>
  Profile Setting
</h1>
{{#if name}}
<form action="/user/{{_id}}/settings" method="POST">

  {{#if isProfilePublic}}
  {{!-- /// add image here >>>> image_Url ,,and having an alternative placeholder image,,,writing an if for it --}}
  <h2>Set your informations Chef</h2>
  <label for="img">Upload your profile picture</label>
  <input type="file" id="img" name="image_Url" accept="image/*">

  <div class="row">
    <div class="col">
      <label>Name
        <br>
        <input name="name" type="text" class="form-control" value="{{name}}" aria-label="user name"
          required />
      </label>
    </div>
  </div>
  <br>
  <label for="floatingTextarea"> Specialities</label>
  <div class="form-floating">

    <textarea name="specialities" class="form-control" value="{{specialities}}"
      id="floatingTextarea"></textarea>

  </div>
  <br>
  <label>Share us your catch phrase:</label>
  <div class="form-floating">

    <textarea name="catchPhrase" class="form-control" value="{{catchPhrase}}"></textarea>

  </div>
  <br>
  <label>About me</label>
  <div class="form-floating">

    <textarea name="aboutMe" class="form-control" value="{{aboutMe}}"></textarea>

  </div>
  {{else}}
    {{!-- /// add image here >>>> image_Url ,,and having an alternative placeholder image,,,writing an if for it --}}
  <h2>Set your informations</h2>
  <label for="img">Upload your profile picture</label>
