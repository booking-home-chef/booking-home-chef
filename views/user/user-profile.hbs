<div class="container user-profile-container">
  <div class="left">
    <div class="row">
      <div class="col-lg-3 user-profile">

        {{#if isProfilePublic}}

          <img
            src="{{image_Url}}"
            alt=""
            style="width: 250px; height: 250px; object-fit: cover;"
            class="profile-image"
          />
          <br />
          <br />
          <br />

          <a
            href="/user/{{_id}}/settings"
            style="margin-left: 60px;"
            class="contact-me"
          >Edit Profile </a>

          <br />
          <br />
          <h4 style="font-weight: 600;">Welcome Chef {{name}}!</h4>
          <br />
          <br />
          <h5 style="font-weight: 600;">Specialities </h5>
          <p>{{specialities}}</p>
          <br />
          <h5 style="font-weight: 600;">Catch phrase</h5>
          <p>{{catchPhrase}}</p>
          <br />
          <h5 style="font-weight: 600;">About Me </h5>
          <p>{{aboutMe}}</p>
          <br />
          {{!-- <a href="/user/{{_id}}/settings">Edit your profile</a> --}}

          <div>
            <a href="/user/{{_id}}/my-recipes">My recipes</a>
          </div>
          <br />
          <div>
            <a href="/recipe/create-recipe">Create new recipe</a>
          </div>
        {{else}}

          <img
            src="{{image_Url}}"
            alt=""
            style="width: 250px; height: 250px; object-fit: cover;"
            class="profile-image"
          />
          <br /><br /><br />
          <a
            href="/user/{{_id}}/settings"
            style="margin-left: 60px;"
            class="contact-me"
          >Edit Profile</a>

          <br />
          <br /><br />
          <h4 style="font-weight: 600;">Welcome {{name}}!</h4>
          <br /><br />
        {{/if}}
        <br />

        <div>
          <a href="/user/{{_id}}/my-favorite-recipes">Favorite Recipes</a>
        </div>
        <br />
        {{! <div>
          <a href="/recipe">list of recipes</a>
        </div> }}
        <br />
        <br />
        <br />
        <div>
          <a href="/">back to the home page</a>
        </div>
        <br />
        <br />
        <br />
        <br />
        <br />

      </div>
    </div>
  </div>

</div>