<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>{{appTitle}}</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/stylesheets/style.css" />
 
  </head>

  <body>

  <nav  class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid navigation-bar-content">
    <a class="navbar-brand" href="/">Home Chef</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
     
      <ul class="navbar-nav navbar-content ">
        <div class="ul-of-navbar">
            {{#if session.user}} 
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/chef/chef-list"> Chefs</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/recipe">Recipes</a>
        </li>
       {{else}}
       <li class="nav-item">
          <a class="nav-link active" aria-current="page" style="" href="/auth/signup"> Chefs</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/auth/signup">Recipes</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/auth/signup">Sign up</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/auth/signin">Sign in</a>
        </li>
        {{/if}}

       
 {{#if session.user}} 
        <li class="nav-item profile-content   dropdown ">
          {{#if session.user.image_Url}}
          <a class="nav-link dropdown-toggle dashboad-btn " href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="{{session.user.image_Url}}" style=" width: 25px; height: 25px; border-radius: 50%; object-fit: cover;" alt="">
          </a>
          {{else}}
          <a class="nav-link dropdown-toggle dashboad-btn " href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="/images/placeholder.png" style=" width: 25px; height: 25px; border-radius: 50%; object-fit: cover;" alt="">
          </a>
          {{/if}}
          {{/if}}
           {{#if session.user.isProfilePublic}}
          <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDropdownMenuLink">
            <li><a class="dropdown-item" href="/user/{{session.user._id}}">My Profile</a></li>
            <li><a class="dropdown-item" href="/user/{{session.user._id}}/settings">Edit Profile</a></li>
            <li><a class="dropdown-item" href="/user/{{session.user._id}}/my-favorite-recipes">My favorite Recipes</a></li>
             <li><a class="dropdown-item" href="/recipe/create-recipe">Create New Recipe</a></li>
            <li><a class="dropdown-item" href="/user/{{session.user._id}}/my-recipes">My Recipes</a></li>
            <li><form action="/auth/logout" method="POST"><button class="log-out" >Logout</button></form></li>
          </ul>
          {{else}}
          <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDropdownMenuLink">
            <li><a class="dropdown-item" href="/user/{{session.user._id}}/settings">Edit Your Profile</a></li>
            <li><a class="dropdown-item" href="/user/{{session.user._id}}/my-favorite-recipes">My favorite Recipes</a></li>
            <li><form action="/auth/logout" method="POST"><button class="log-out">Logout</button></form></li>
          </ul>
        </li>
           {{/if}}
        </div>
       
      </ul>
    </div>
  </div>
</nav>


    {{{body}}}

    
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <script src="/js/script.js"></script>
   
  </body>

</html>


