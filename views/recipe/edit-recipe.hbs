<div class="container">
  <div class="row">
    <div class="col-lg-4">


<form action="/recipe/{{_id}}/edit" method="POST" enctype="multipart/form-data">
<img src="{{image_Url}}" alt="" class="recipe-image" />
<br>
  <div class="input-group mb-3">
    <p>Upload your recipe image</p>
    <div>
  <input type="file" class="form-control recipe-image" name="image_Url"  accept="image/*" id="inputGroupFile03" aria-describedby="inputGroupFileAddon03" aria-label="Upload">
    </div>
</div>
<br>

    <div class="col-12">
      <label for="">
        Recipe name
      </label>
      <input
        name="name"
        value="{{name}}"
        type="text"
        class="form-control"
        placeholder="Recipe name"
        aria-label="Recipe name"
        required
      />
    </div>
    <br>
    <div class="col-12">
           <label for="">Ingredients</label>
      <input
        name="ingredient"
        type="text"
        value="{{ingredient}}"
        class="form-control"
        placeholder="Ingredients"
        aria-label="Ingredient"
        required
      />
    </div>

  <br />
  <label for="floatingTextarea">Description</label>
  <div class="form-floating">

    <textarea
      name="description"
      class="form-control"
      value="{{description}}"
      placeholder="Write Description Here"
      id="floatingTextarea"
      required
    >{{description}}</textarea>

  </div>

<br>
<p>Dietery</p>

<div class="checkbox">
<div class="left-checkbox">
   <input type="checkbox"  name="dietary" value="lactose intolerance">
  <label > Lactose intolerance</label><br>
  <input type="checkbox"  name="dietary" value="gluten intolerance or sensitivity">
  <label > Gluten intolerance or sensitivity</label><br>
  <input type="checkbox" name="dietary" value="vegetarian">
  <label > Vegetarian</label><br>
   <input type="checkbox"  name="dietary" value="vegan">
  <label > Vegan</label><br>
  <input type="checkbox"  name="dietaryr" value="kosher">
  <label > Kosher</label><br>
</div>
  
<div class="right-checkbox">
    <input type="checkbox"  name="dietary" value="keto">
  <label > Keto</label><br>
   <input type="checkbox"  name="dietary" value="diabetes">
  <label > Diabetes</label><br>
  <input type="checkbox"  name="dietary" value="dairy-free">
  <label >Dairy-free</label><br>
  <input type="checkbox"  name="dietary" value="low carb">
  <label > Low carb</label><br>
   <input type="checkbox"  name="dietary" value="food allergies">
  <label > Food allergies</label><br>
</div>
</div>

   <br />
  <button class="col-6 offset-3 create-acount">Edit Recipe</button>

</form>

    </div>
  </div>
</div>
