  <div class="container">
    <div class="row">
      <div class="col">
      <h1 class="text-center recipe-list-title"> All {{dietary}} Recipes</h1>
  
<div class="dietery-container">
 {{#each dieteryArr}}
  <div><a class="dietry-links" href="/recipe/search/{{this}}"> {{this}} </a></div><br><br><br>
  {{/each}}
</div>
 
      </div>
